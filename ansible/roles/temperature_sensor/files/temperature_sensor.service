[Unit]
Description=MQTT Temperature Sensor daemon
After=syslog.target network.target
Documentation=https://github.com/davea/temperature_sensor

[Service]
ExecStart=/home/pi/temperature_sensor/main.py
WorkingDirectory=/home/pi/temperature_sensor
User=pi
Group=pi
SyslogIdentifier=nodehap
StandardOutput=syslog
Restart=always
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
